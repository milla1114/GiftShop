@using GiftShop.Data.ViewModels
@model RegisterVM;

@{
    ViewData["Title"] = "Create a new account";
}


@if (TempData["Error"] != null)
{
    <div class="col-md-12 alert alert-danger">
        <span><b>Sorry!</b> - @TempData["Error"]</span>
    </div>
}
<div class="register-container1">
    <div class="header">
        <img src="~/svgs/gift 2.svg" alt="logo" />
        <h2>Create a new account</h2>
    </div>
    <hr />
    <form asp-action="Register">
        <div class="form-group">
            <label asp-for="FullName" class="control-label"></label>
            <input asp-for="FullName" class="form-control reg-input" placeholder="Enter your Full Name" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="EmailAddress" class="control-label"></label>
            <input asp-for="EmailAddress" class="form-control reg-input" placeholder="Enter your email address" />
            <span asp-validation-for="EmailAddress" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password" class="control-label"></label>
            <input asp-for="Password" class="form-control reg-input" placeholder="Create a Password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ConfirmPassword" class="control-label"></label>
            <input asp-for="ConfirmPassword" class="form-control reg-input" placeholder="Confirm your password" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <div class="form-group reg-btns">
            <input class="btn btn-outline-success float-right" type="submit" value="Sign up" />
            <a class="btn btn-outline-secondary" asp-controller="Items" asp-action="Index">Cancel</a>
        </div>
    </form>
</div>
